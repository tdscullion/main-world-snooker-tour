 .wst-collection-controls {
  display: grid;
  grid-template-columns: auto 1fr auto;
  grid-template-areas: "left center right";
  align-items: center;
  column-gap: 16px;
}

/* Map children into the grid areas */
.wst-collection-controls__left {
  grid-area: left;
}

.wst-collection-controls__center {
  grid-area: center;
}

.wst-collection-controls__right {
  grid-area: right;
}

/* On desktop, keep pills in a row, centered */
.wst-collection-controls__center {
  display: flex;
  justify-content: center;
  gap: 8px;
}

hr.wst-collection-controls_hr {
  margin: 0 auto;
  max-width: 1590px;
  width: 100%;
  height: 1px;
  margin-top: 16px;
  padding: 0 16px;
  background-color: #000000;
}

/* Left / center / right blocks */
.wst-collection-controls__left,
.wst-collection-controls__right {
  display: flex;
  align-items: center;
  gap: 12px;
  flex-shrink: 0; /* don’t let them collapse */
}

.wst-collection-controls__center {
  display: flex;
  justify-content: center;
  gap: 8px;
  flex: 1; /* this takes the remaining space between left and right */
