{% javascript %}
document.addEventListener('DOMContentLoaded', function () {
  // === TAG FILTERING ===
  const filterButtons = document.querySelectorAll('.custom-product-filter');
  // const gridItems = document.querySelectorAll('#WSTProductGrid [data-categories]');
  const gridItems = document.querySelectorAll('#product-grid [data-categories]');
  const filterPill = document.querySelector('.wst-active-filter-pill span');
  const filterPillClear = document.querySelector('.wst-active-filter-pill__clear');

  if (filterButtons.length && gridItems.length) {
    const applyFilter = (category, labelText) => {
      const isAll = category === 'all';

      gridItems.forEach(item => {
        const raw = (item.getAttribute('data-categories') || '').trim();
        const itemCategories = raw ? raw.split(',') : [];

        if (isAll) {
          item.hidden = false;
        } else {
          item.hidden = !itemCategories.includes(category);
        }
      });

      // Update the pill label
      if (filterPill) {
        filterPill.textContent = isAll ? 'All products' : labelText;
      }
    };

    filterButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        // toggle active state
        filterButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const category = btn.dataset.category;
        const label = btn.textContent.trim();

        applyFilter(category, label);
      });
    });

    // Clear button just triggers the "View all" button
    if (filterPillClear) {
      filterPillClear.addEventListener('click', () => {
        const allBtn = document.querySelector('.custom-product-filter[data-category="all"]');
        if (allBtn) allBtn.click();
      });
    }
  }

  // === SORT DROPDOWN ===
  const sortWrapper = document.querySelector('.wst-sort');
  const sortTrigger = document.querySelector('.wst-sort-trigger');
  const sortMenu = document.querySelector('.wst-sort-menu');
  const sortOptions = document.querySelectorAll('.wst-sort-option');

  if (sortWrapper && sortTrigger && sortMenu && sortOptions.length) {
    sortTrigger.addEventListener('click', function () {
      const isOpen = sortMenu.hidden === false;
      sortMenu.hidden = isOpen;
      sortTrigger.setAttribute('aria-expanded', String(!isOpen));
    });

    sortOptions.forEach(option => {
      option.addEventListener('click', function () {
        const sortValue = this.dataset.sort;
        const url = new URL(window.location.href);

        url.searchParams.set('sort_by', sortValue);
        window.location.href = url.toString(); // full reload, clean slate
      });
    });

    document.addEventListener('click', function (event) {
      if (!sortWrapper.contains(event.target)) {
        sortMenu.hidden = true;
        sortTrigger.setAttribute('aria-expanded', 'false');
      }
    });
  }
});

