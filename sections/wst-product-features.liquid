<style>

/* Default: desktop/tablet visible, mobile slider hidden */
.wst-product-features__desktop {
  display: block;
}

.wst-product-features__mobile {
  display: none;
}
.wst-product-features {
  background-color: #141413;
  padding: 112px 0;
}

.wst-product-features__heading {
  color:  #FBFAEE;
  /* Heading/H2 */
  font-family: "WST Display";
  font-size: var(--Text-Sizes-Heading-2, 52px);
  font-style: normal;
  font-weight: 400;
  line-height: 120%; /* 62.4px */
  letter-spacing: -0.52px;
  text-transform: uppercase;
  margin: 0;
}


.wst-product-features__inner {
  display: flex;
  align-items: stretch;
  gap: 32px;
  align-self: stretch;
  border-top: var(--Stroke-Divider-Width, 1px) solid var(--Color-WST-WHITE, #FBFAEE);
  flex-wrap: nowrap;  
  margin-top: 8rem;
}

.wst-product-feature {
  display: flex;
  padding: 32px 0;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  gap: 32px;
  flex: 1 1 0;   /* allow them to shrink */
  min-width: 0;  /* allow content to wrap inside instead of forcing width */
}


.wst-product-feature__image-wrapper {
  align-self: stretch;
  aspect-ratio: 487.33 / 274.13;
  border-radius: var(--Radius-Medium, 16px);
  overflow: hidden;
}

.wst-product-feature__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.wst-product-feature-text__container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 24px;
  align-self: stretch;
}

.wst-product-feature__title {
  color: var(--Color-WST-WHITE, #FBFAEE);
  font-family: "WST Display";
  font-size: var(--Text-Sizes-Heading-4, 36px);
  font-style: normal;
  font-weight: 400;
  line-height: 130%; /* 46.8px */
  letter-spacing: -0.36px;
  text-transform: uppercase;
  margin: 0; 
}

.wst-product-feature__text {
  color: var(--Color-WST-WHITE, #FBFAEE);
  font-family: Roboto;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 150%; /* 24px */
  align-self: stretch;
  margin: 0; 
}

/* Divider between cards */
.wst-product-feature__divider {
 width: 1px;
  background-color:  #FBFAEE;
}



/* ************** */
/* Media Queries */
/* ************* */
@media (max-width: 1024px) {
  .wst-product-features {
  padding: 80px 0;
}
  .wst-product-feature__title {
    font-size: var(--Text-Sizes-Heading-4, 28px);
  }
  .wst-product-features__inner {
   margin-top: 6rem;
    gap: 16px;
  }
  .wst-product-feature {
    padding: 16px 0;
  }
  .wst-product-feature-text__container {
    gap: 16px;
  }
}
  

@media (max-width: 768px) {
  .wst-product-features__inner {
    flex-direction: column;
    gap: 0; /* dividers will control spacing */
     align-items: center; /* center children horizontally */
  }

  .wst-product-feature {
    flex: 1 1 auto; /* allow vertical expansion */
    max-width: 75%;
    width: 100%;        /* prevents shrinking weirdness */
    margin: 0 auto;
  }

  .wst-product-feature__divider {
    display: none;
  }
}

/* At 450px and under: hide desktop, show mobile slider */
@media (max-width: 450px) {
  .wst-product-features__desktop {
    display: none;
  }

  .wst-product-features__mobile {
    display: block;
  }

   .wst-product-features {
    padding: 64px 0;
  }

  .wst-product-features__heading {
    font-family: "WST Display";
    font-size: 40px;
    line-height: 120%; /* 48px */
    margin-bottom: 48px;
  }

  .wst-product-feature-mobile-card {
    width: 100%;
    display: flex;
    padding: 24px 0;
    flex-direction: column;
    align-items: flex-start;
    gap: 24px;
    align-self: stretch;
    border-top: 1px solid #FBFAEE;
  }

  .wst-product-feature__image-wrapper-mobile {
    height: 188.438px;
    align-self: stretch;
    aspect-ratio: 335 / 188.44;
    border-radius: var(--Radius-Medium, 16px);
    overflow: hidden;
  }

    .wst-product-feature__image-mobile {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .wst-product-feature-text__container-mobile {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 20px;
    align-self: stretch;
  }
  .wst-product-feature__title-mobile {
    color: var(--Color-WST-WHITE, #FBFAEE);
    font-family: "WST Display";
    font-size: var(--Text-Sizes-Heading-3, 32px);
    font-style: normal;
    font-weight: 400;
    line-height: 120%; /* 38.4px */
    letter-spacing: -0.32px;
    text-transform: uppercase;
    margin: 0;
  }

  .wst-product-feature__text-mobile {
    color: var(--Color-WST-WHITE, #FBFAEE);
    /* Text/Regular/Normal */
    font-family: Roboto;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%; /* 24px */
    margin: 0;
  }

  /* Center the pagination container */
.swiper-pagination {
  width: 100%;
  text-align: center;
  display: block !important;
  margin: 16px 0 0;
}

/* Inactive dash */
.swiper-pagination-bullet {
  display: inline-block !important;
  width: 30.599px;
  height: 3px;
  border-radius: 2px;
  background:  #F1002A;
  opacity: 0.3;
  margin: 0 4px !important;
}

/* Active dash */
.swiper-pagination-bullet-active {
  opacity: 1;
  background:  #F1002A;
}
}

</style>

<script>
new Swiper('.swiper.features-swiper', {
  loop: true,
    slidesPerView: 1,
  spaceBetween: 10,   
  pagination: {
    el: '.swiper-pagination',
    clickable: true
  },
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev'
  },
  scrollbar: {
    el: '.swiper-scrollbar',
    draggable: true
  }
});
</script>

{% schema %}
{
  "name": "WST product features",
  "tag": "section",
  "class": "wst-product-features-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Product features"
    }
  ],
  "presets": [
    {
      "name": "WST product features"
    }
  ]
}
{% endschema %}