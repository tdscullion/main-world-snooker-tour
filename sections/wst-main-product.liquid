<script>
  (function() {
    const productDataEl = document.getElementById('wst-product-data-{{ section.id }}');
    if (!productDataEl) return;

    const productData = JSON.parse(productDataEl.textContent);
    const productOptions = productData.options || [];   // e.g. ["Color", "Size"]
    const productVariants = productData.variants || [];

    // Get currently selected option values in correct order
    function getSelectedOptions() {
      const selected = [];

      productOptions.forEach(function(optionName) {
        const nameAttr = 'options[' + optionName + ']';

        // We now assume ALL selects for this option are in sync,
        // so we can just read the first one.
        const select = document.querySelector('select[name="' + nameAttr + '"]');
        if (select) {
          selected.push(select.value);
        }
      });

      return selected;
    }

    // Find the variant whose option1/2/3 match the selected values
    function findVariant(selectedOptions) {
      if (!selectedOptions.length) return null;

      return productVariants.find(function(variant) {
        const opts = [variant.option1, variant.option2, variant.option3].filter(Boolean);
        if (opts.length !== selectedOptions.length) return false;

        for (let i = 0; i < opts.length; i++) {
          if (opts[i] !== selectedOptions[i]) return false;
        }
        return true;
      }) || null;
    }

    // Update ALL hidden id inputs (both layouts) with the current variant id
    function syncVariantId() {
      const selectedOptions = getSelectedOptions();
      const matchingVariant = findVariant(selectedOptions);
      if (!matchingVariant || !matchingVariant.id) return;

      document.querySelectorAll('input[name="id"]').forEach(function(input) {
        input.value = String(matchingVariant.id);
      });
    }

    // SWATCH CLICK â†’ update ALL Color selects + variant id
    document.addEventListener('click', function (event) {
      const swatch = event.target.closest('.wst-swatch');
      if (!swatch) return;

      const group = swatch.closest('.product-form__input');
      if (!group) return;

      const select = group.querySelector('.wst-color-select');
      if (!select) return;

      const label = swatch.getAttribute('data-swatch-label');
      if (!label) return;

      const selectName = select.name;

      // ðŸ”‘ Update ALL Color selects in both layouts so everything stays in sync
      document.querySelectorAll('select[name="' + selectName + '"]').forEach(function(s) {
        s.value = label;
      });

      // Visual active state (only for swatches in this group)
      group.querySelectorAll('.wst-swatch.is-active').forEach(function(btn) {
        btn.classList.remove('is-active');
      });
      swatch.classList.add('is-active');

      // Recalculate and sync variant id
      syncVariantId();
    });

    document.addEventListener('change', function(event) {
  const select = event.target.closest('select[name^="options["]');
  if (!select) return;

  const name = select.name;
  const value = select.value;

  // ðŸ”‘ Keep ALL selects for this option in sync across both layouts
  document.querySelectorAll('select[name="' + name + '"]').forEach(function(s) {
    s.value = value;
  });

  // Now recalc the variant ID based on the updated values
  syncVariantId();
});


    // Initial sync on load
    document.addEventListener('DOMContentLoaded', function() {
      syncVariantId();
    });
  })();
</script>
